@model IEnumerable<Kino.Models.Seanse>

@{
    ViewData["Title"] = "Index";
}

<h1 class="p-3">Aktualne Seanse</h1>
<p>
    <a  class="p-2" asp-action="Create">Dodaj Nowy Seans</a>
</p>
<hr />
<content class="d-flex flex-column gap-5">
@foreach (var item in Model) {
    <div class="container d-flex gap-5">
        <div class="d-flex flex-column">
                <img src="/assets/@item.Film.Plakat" onerror=" this.src='/assets/placeholder.png'" width="120" height="180" />
            <a class="text-center" asp-action="Delete" asp-route-id="@item.Id_seansu">Delete</a>
        </div>
        <div class="d-flex justify-content-center align-items-left flex-column gap-2">
            <h2>@Html.DisplayFor(modelItem => item.Film.Tytul)</h2>
            <p>@Html.DisplayFor(modelItem => item.Start)</p>
            <div class="d-flex flex-column justify-content-center align-items-left">
                <p class="m-0">Kino | "@Html.DisplayFor(modelItem => item.kino.Nazwa_Kina)"</p>
                <p class="m-0">Adres | @Html.DisplayFor(modelItem => item.kino.Adres)</p>
            </div>
        </div>
    </div>
}
</content>