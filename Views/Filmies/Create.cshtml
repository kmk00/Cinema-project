@model Kino.Models.Filmy

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Filmy</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group p-2">
                <label asp-for="Tytul" class="control-label"></label>
                <input asp-for="Tytul" class="form-control" />
                <span asp-validation-for="Tytul" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="Czas_trwania" class="control-label"></label>
                <input asp-for="Czas_trwania" class="form-control" />
                <span asp-validation-for="Czas_trwania" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="Rok" class="control-label"></label>
                <input asp-for="Rok" class="form-control" />
                <span asp-validation-for="Rok" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="Gatunek" class="control-label"></label>
                <select asp-for="Gatunek" class="form-control" asp-items=ViewBag.GatunekID>
                        <option value="">---Wybierz Gatunek---</option>
                </select>
            <a class="text-center add-btn px-2" asp-action="Create" asp-controller="Gatunkis">Dodaj nowy gatunek do listy</a>
            </div>
            <div class="form-group p-2">
                <label asp-for="Rezyser" class="control-label"></label>
                <select asp-for="Rezyser" class="form-control" asp-items=ViewBag.RezyserID>
                    <option value="">---Wybierz Rezysera---</option>
                </select>
            <a class="text-center add-btn px-2" asp-action="Create" asp-controller="Rezyserzies">Dodaj nowego reżysera do listy</a>
            </div>
            <div class="form-group p-2">
                <label asp-for="Plakat" class="control-label"></label>
                <input asp-for="Plakat" class="form-control" placeholder="nazwafilmu.png"/>
                <span asp-validation-for="Plakat" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <input type="submit" value="Dodaj" class="btn btn-primary btn--dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="px-2" asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
